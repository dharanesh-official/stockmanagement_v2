{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "nixpacksPath": "apps/api"
    },
    "deploy": {
        "startCommand": "npx prisma migrate deploy && npm run start:prod",
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
    }
}